<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Disabled -->
    <item android:alpha="0.38" android:color="?attr/colorOnSurfaceVariant" android:state_enabled="false"/>

    <!-- Error -->
    <item android:color="?attr/colorOnSurfaceVariant" app:state_error="true" />

    <!-- Indeterminate -->
    <item android:color="?attr/colorOnSurfaceVariant" app:state_indeterminate="true" />

    <!-- Checked -->
    <item android:color="?attr/colorPrimaryInverse" android:state_checked="true" />

    <!-- Unchecked -->
    <item android:color="?attr/colorOnSurfaceVariant" android:state_checked="false" />
</selector>